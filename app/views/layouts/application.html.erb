<!DOCTYPE html>
<html>
  <head>
    <title>IdeawareTest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <div class="navbar navbar-static-top navbar-inverse">
      <div class="navbar-inner">
        <a class="brand" href="#"></a>
        <%= link_to "TrackTest", root_path, :class=>"brand"%>
        <ul class="nav pull-right">
          <% if current_user %>
            <li><%= link_to current_user.name, user_tasks_path(current_user) %></li>
          <% else %>
            <li><a href="http://localhost:3000/auth/twitter"> login through twitter</a></li>
          <% end %> 
        </ul>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
