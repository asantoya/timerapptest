<div class="container">
  <br>
  <div class="pull-right">
    <%= link_to 'Create new project', new_user_project_path, :class => "btn btn-success" %>
    <%= link_to 'Create a new task', new_user_task_path, :class => "btn btn-primary" %>
  </div>
  
  <br>
  <h1>My recent tasks</h1>
  <br>
  <% if @tasksToday.count<1 %>
    <p> You haven't registered any task. Â¿Do you want to  <%= link_to 'create a new task', new_user_task_path%> now?</p>

  <% else %>
    <table class="table table-hover">
      <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>State</th>
        <th>Created At</th>
        <th></th>
      </tr>
 
      <% @tasksToday.each do |task| %>
        <tr>
          <td><%= link_to task.name, user_task_path(@user, task)%></td>
          <% if task.duration.nil?  %>
            <td>0 seg</td>
          <% else %>
            <td><%= task.duration %> seg</td>
          <% end %>
          <td><%= task.state %></td>
          <td><%= task.created_at %></td>
          <td><%= link_to 'Show', user_task_path(@user, task)%></td>
        </tr>
      <% end %>
    </table>

    <h1>Yesterday and older tasks</h1>
    <br>
    <table class="table table-hover">
      <tr>
        <th>Name</th>
        <th>Duration</th>
        <th>State</th>
        <th>Created At</th>
        <th></th>
      </tr>
 
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.name, user_task_path(@user, task)%></td>
          <% if task.duration.nil?  %>
            <td>0 seg</td>
          <% else %>
            <td><%= task.duration %> seg</td>
          <% end %>
          <td><%= task.state %></td>
          <td><%= task.created_at %></td>
          <td><%= link_to 'Show', user_task_path(@user, task)%></td>
        </tr>
      <% end %>
    </table>
    <br />
  <% end %>
</div>